            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\",\n  \"confirmPassword\": \"password123\",\n  \"username\": \"testuser\",\n  \"fullName\": \"Test User\"\n}"
            },
            "url": {
